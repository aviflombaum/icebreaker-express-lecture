<!DOCTYPE html>
<html>
    <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  
    <title>Icebreaker</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <link href="/stylesheets/style.css" rel="stylesheet">

    <!-- Javascript -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>    
  </head>
  <body>
    <div class="container">
      <header class="header clearfix">
        <nav>
          <ul class="nav nav-pills float-right">
            <li class="nav-item">
              <a class="nav-link" href="/questions/new">New Question</a>
            </li>
          </ul>
        </nav>
        <h3 class="text-muted">Icebreakers</h3>
      </header>

      <main role="main">
        <div class="row marketing">
          <div class="col-lg-12">
            <div class="card">
              <h4 class="card-header"><%= question.content %></h4>
              <div class="card-body">
                
                <% iceBreakerResponses.forEach(function(iceBreakerResponse) { %>
                <div class="card" style="margin-bottom: 20px">
                  <h4 class="card-header"><%= iceBreakerResponse.email %></h4>
                  <div class="card-body">
                    <p class="card-text"><%= iceBreakerResponse.responseContent %></p>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>
        </div>
      </main>


      <footer class="footer">
        <p>&copy; Company 2017</p>
      </footer>
    </div> <!-- /container -->
  </body>
</html>
